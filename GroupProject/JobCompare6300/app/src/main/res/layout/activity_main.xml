<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#198A4D4D"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:text="Your Job Hub"
                android:textAlignment="center"
                android:textColor="#575960"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/currentJobActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="#4D8A4D4D"
                android:insetLeft="10dp"
                android:insetTop="5dp"
                android:insetRight="10dp"
                android:insetBottom="5dp"
                android:onClick="currentJobClick"
                android:text="Current Job" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/jobOffersActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="#4D8A4D4D"
                android:insetLeft="10dp"
                android:insetTop="5dp"
                android:insetRight="10dp"
                android:insetBottom="5dp"
                android:onClick="jobOffersClick"
                android:text="Job Offers" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CompareActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="#4D8A4D4D"
                android:insetLeft="10dp"
                android:insetTop="5dp"
                android:insetRight="10dp"
                android:insetBottom="5dp"
                android:onClick="compareClick"
                android:text="Compare" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adjustSettingsActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:backgroundTint="#4D8A4D4D"
                android:insetLeft="10dp"
                android:insetTop="5dp"
                android:insetRight="10dp"
                android:insetBottom="5dp"
                android:onClick="settingsClick"
                android:text="Adjust Weight Settings" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

